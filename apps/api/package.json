{
  "name": "@adventure/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rimraf --glob \"dist\" \"build\" \"lib\" \"src/**/*.js\" \"src/**/*.js.map\" \"src/**/*.d.ts\" \"src/**/*.d.ts.map\" \"**/*.tsbuildinfo\"",
    "dev": "tsx watch --exclude \"../web/**\" --exclude \"../web/.next/**\" --exclude \"../**/node_modules/**\" --exclude \"../packages/**/dist/**\" --exclude \"../**/*.tsbuildinfo\" src/index.ts",
    "build": "npm run clean && tsc",
    "start": "node dist/index.js",
    "test": "vitest"
  },
  "dependencies": {
    "@adventure/database": "*",
    "@adventure/game-engine": "*",
    "@adventure/shared": "*",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "eslint": "9.39.2",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "next": "16.1.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}